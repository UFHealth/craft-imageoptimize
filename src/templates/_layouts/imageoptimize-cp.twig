{% extends "_layouts/cp" %}

{% from 'image-optimize/_includes/macros.twig' import registerJsModules %}

{% block head %}
    {{ parent() }}
    {{ craft.imageOptimize.includeCssModule("vendors.css", false) }}
    {{ craft.imageOptimize.includeCssModule("styles.css", false) }}
{% endblock %}

{% block foot %}
    {{ parent() }}
    {% set jsModules = [
        'runtime.js',
        'vendors.js',
        'commons.js',
        'imageoptimize.js',
    ] %}
    {{ registerJsModules(jsModules) }}
{% endblock %}
